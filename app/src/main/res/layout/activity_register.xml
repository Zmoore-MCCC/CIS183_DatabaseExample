<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/et_v_reg_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/et_v_reg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/et_v_reg_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Firstname"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/et_v_reg_fname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lastname"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/et_v_reg_lname"
        app:layout_constraintEnd_toEndOf="@+id/et_v_reg_lname"
        app:layout_constraintStart_toStartOf="@+id/et_v_reg_lname"
        app:layout_constraintTop_toBottomOf="@+id/et_v_reg_fname" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/et_v_reg_email"
        app:layout_constraintEnd_toEndOf="@+id/et_v_reg_email"
        app:layout_constraintStart_toStartOf="@+id/et_v_reg_email"
        app:layout_constraintTop_toBottomOf="@+id/et_v_reg_lname" />

    <Button
        android:id="@+id/btn_v_reg_back"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="58dp"
        android:text="Back"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_v_reg_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_v_reg_email" />

    <Button
        android:id="@+id/btn_v_reg_register"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginEnd="40dp"
        android:text="Reg"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_v_reg_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_reg_back" />
</androidx.constraintlayout.widget.ConstraintLayout>